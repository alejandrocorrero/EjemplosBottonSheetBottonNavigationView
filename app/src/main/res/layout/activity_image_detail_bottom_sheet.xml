<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/activity_image_detail_bottom_sheet_peekHeight"
    app:layout_behavior="@string/bottom_sheet_behavior"
    tools:ignore="Overdraw"
    android:background="@color/transparent_grey">

    <TextView
        android:id="@+id/lblName"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="@dimen/activity_image_detail_bottom_sheet_lblname_padding"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/lblPhone"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblName"
        android:padding="@dimen/activity_image_detail_bottom_sheet_lblPhone_padding"
        android:textColor="@android:color/white"/>


    <TextView
        android:id="@+id/lblUrl"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblPhone"
        android:padding="@dimen/activity_image_detail_bottom_sheet_lblUrl_padding"
        android:textColor="@android:color/white"/>
</RelativeLayout>